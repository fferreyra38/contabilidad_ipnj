{% extends 'base.html.twig' %}

{% block body %}
    <h1>Envio</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ envio.id }}</td>
            </tr>
            <tr>
                <th>Codigo</th>
                <td>{{ envio.codigo }}</td>
            </tr>
            <tr>
                <th>Monto</th>
                <td>{{ envio.monto }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('envio_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('envio_edit', { 'id': envio.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
